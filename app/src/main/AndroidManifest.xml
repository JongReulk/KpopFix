<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tenriver.kpop">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_new_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kpop">
        <activity android:name="com.tenriver.kpop.QuizMain"
            android:screenOrientation="portrait"/>
        <activity android:name="com.tenriver.kpop.DifficultyActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.tenriver.kpop.YearActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.tenriver.kpop.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.tenriver.kpop.TitleActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.tenriver.kpop.TipsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.tenriver.kpop.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>