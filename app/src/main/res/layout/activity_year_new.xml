<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YearActivity">

    <ScrollView
        android:id="@+id/year_Scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.20"
        app:layout_constraintHeight_percent="0.44"
        app:layout_constraintWidth_percent="1"
        >

        <LinearLayout
            android:id="@+id/year_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/year_2010"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="2010"
                >
            </Button>
            <Button
                android:id="@+id/year_2011"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="2011"
                >
            </Button>
            <Button
                android:id="@+id/year_2012"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="2012"
                >
            </Button>
            <Button
                android:id="@+id/year_2013"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="2013"
                >
            </Button>
            <Button
                android:id="@+id/year_2014"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="2014"
                >
            </Button>
            <Button
                android:id="@+id/year_2015"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="2015"
                >
            </Button>
            <Button
                android:id="@+id/year_2016"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="2016"
                >
            </Button>

            <Button
                android:id="@+id/year_2017"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
            android:text="2017"
            >

            </Button>

            <Button
                android:id="@+id/year_2018"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="2018"
                >
            </Button>

            <Button
                android:id="@+id/year_2019"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="2019"
                >
            </Button>

            <Button
                android:id="@+id/year_2020"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="2020"
                >
            </Button>

            <Button
                android:id="@+id/year_2021"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="2021"
                >
            </Button>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/year_up"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:text="up"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.80"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="1"
        >

    </Button>

    <Button
        android:id="@+id/year_down"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:text="down"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.92"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="1"
        >

    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>