<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YearActivity">

    <!-- 모니터 이미지 -->
    <ImageView
        android:id="@+id/Image_TV_year"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/tvframefullfinal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.20"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintWidth_percent="1"
        />

    <TextView
        android:id="@+id/year_Title"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:gravity="center"
        android:text="@string/Year"
        android:fontFamily="@font/font_digital"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="24sp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeStepGranularity="2sp"

        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.5"


        app:layout_constraintTop_toTopOf="@id/Image_TV_year"
        app:layout_constraintLeft_toLeftOf="@id/Image_TV_year"
        app:layout_constraintRight_toRightOf="@id/Image_TV_year"
        app:layout_constraintBottom_toBottomOf="@id/Image_TV_year"
        >

    </TextView>

    <ScrollView
        android:id="@+id/year_Scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.23"
        app:layout_constraintWidth_percent="0.9"

        app:layout_constraintTop_toBottomOf="@+id/year_Title"
        app:layout_constraintLeft_toLeftOf="@id/Image_TV_year"
        app:layout_constraintRight_toRightOf="@id/Image_TV_year"
        app:layout_constraintBottom_toBottomOf="@id/Image_TV_year"
        >

        <LinearLayout
            android:id="@+id/year_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <Button
                android:id="@+id/year_2016"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="2016"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                >
            </Button>

            <Button
                android:id="@+id/year_2017"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="2017"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
            >

            </Button>

            <Button
                android:id="@+id/year_2018"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="2018"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                >
            </Button>

            <Button
                android:id="@+id/year_2019"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="2019"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                >
            </Button>

            <Button
                android:id="@+id/year_2020"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="2020"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                >
            </Button>

            <Button
                android:id="@+id/year_2021"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="2021"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                >
            </Button>

            <Button
                android:id="@+id/year_random"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="@string/Random"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                >
            </Button>

            <Button
                android:id="@+id/year_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_year"
                android:text="@string/All"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                >
            </Button>


        </LinearLayout>
    </ScrollView>

    <!-- 리모컨 이미지 -->
    <ImageView
        android:id="@+id/Remote_year"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/remotecontrol"
        android:scaleType="fitXY"

        app:layout_constraintTop_toBottomOf="@id/Image_TV_year"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHeight_percent="0.38"
        app:layout_constraintWidth_percent="0.45"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Remote_button_year"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/Remote_year"
        app:layout_constraintBottom_toBottomOf="@+id/Remote_year"
        app:layout_constraintLeft_toLeftOf="@+id/Remote_year"
        app:layout_constraintRight_toRightOf="@+id/Remote_year"
        >

    <ImageButton
        android:id="@+id/year_up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"

        android:soundEffectsEnabled="false"

        android:src="@drawable/uparrow"
        android:text="up"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25"
        >

    </ImageButton>

    <Button
        android:id="@+id/year_confirm"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_remote_circle"
        android:soundEffectsEnabled="false"

        android:text="OK"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"


        >
    </Button>

    <ImageButton
        android:id="@+id/year_down"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"

        android:background="@android:color/transparent"
        android:src="@drawable/downarrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.75"
        >
    </ImageButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>