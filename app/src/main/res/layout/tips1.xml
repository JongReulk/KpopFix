<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 게임스크린샷 이미지 -->
    <ImageView
        android:id="@+id/tips1_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/screenshot1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHeight_percent="0.9"
        app:layout_constraintWidth_percent="0.9"
        />

    <TextView
        android:id="@+id/tips1_text1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="시작버튼을 눌러\n게임시작!"
        android:textStyle="bold"
        android:textColor="@color/hard_color"
        android:fontFamily="@font/font_digital"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="0.3"

        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="13sp"
        android:autoSizeMaxTextSize="16sp"
        android:autoSizeStepGranularity="2sp"
        />

    <TextView
        android:id="@+id/tips1_text2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="설정버튼을 눌러\n볼륨조절!"
        android:textStyle="bold"
        android:textColor="@color/hard_color"
        android:fontFamily="@font/font_digital"
        android:gravity="center"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.965"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintWidth_percent="0.3"

        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="13sp"
        android:autoSizeMaxTextSize="16sp"
        android:autoSizeStepGranularity="2sp"
        />

    <TextView
        android:id="@+id/tips1_text3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="종료버튼을 눌러\n게임종료!"
        android:textStyle="bold"
        android:textColor="@color/hard_color"
        android:fontFamily="@font/font_digital"
        android:gravity="center"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintWidth_percent="0.3"

        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="13sp"
        android:autoSizeMaxTextSize="16sp"
        android:autoSizeStepGranularity="2sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>