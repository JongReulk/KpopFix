<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
    <shape >

        <!-- 배경  -->
        <solid android:color="#1B9A4A"/>


        <!-- 테두리  -->
        <stroke
            android:width="2dp"
            android:color="#fff"/>

        <corners
            android:radius="10dp" />
    </shape>
    </item>

    <item android:state_selected="false">
        <shape >

            <!-- 배경  -->
            <solid android:color="#8C8C8C"/>


            <!-- 테두리  -->
            <stroke
                android:width="2dp"
                android:color="#fff"/>

            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape >

            <!-- 배경  -->
            <solid android:color="#1B9A4A"/>


            <!-- 테두리  -->
            <stroke
                android:width="2dp"
                android:color="#fff"/>

            <corners
                android:radius="10dp" />
        </shape>
    </item>

</selector>